@model ISManagement.ViewModels.PersonAccount

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Person Details</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Person.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Person.surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Person.id_number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.id_number)
        </dd>

    </dl>
</div>

<h3>Accounts List</h3>
<p>
    @Html.ActionLink("New Account", "Create", new { controller = "Accounts", action = "Create", id = Model.Person.Id }, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Account Number
        </th>
        <th>
            Outstanding Balance
        </th>
        <th>
            Account Details
        </th>
    </tr>

    @foreach (var item in Model.Accounts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.account_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.outstanding_balance)
            </td>
            <td>
                @Html.ActionLink("View Details", "Details", new { controller = "Accounts", action = "Details", id = item.Id}) 
            </td>
        </tr>
    }

</table>


<p>
    @Html.ActionLink("Edit Person Details", "Edit", new {id = Model.Person.Id}) |
    @Html.ActionLink("Back to List of Persons", "Index")
</p>
